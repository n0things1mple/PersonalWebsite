---
import PageLayout from '../layouts/PageLayout.astro';
import { SITE } from '../lib/constants';
---

<PageLayout title={SITE.title}>
  <!-- Hero 区域 (Phase 2 会替换为完整的动效版本) -->
  <section class="relative flex min-h-screen items-center justify-center overflow-hidden px-6">
    <!-- 背景渐变 -->
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--color-accent-violet)_0%,_transparent_50%)] opacity-20"></div>
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_bottom_right,_var(--color-accent-pink)_0%,_transparent_50%)] opacity-10"></div>

    <!-- 内容 -->
    <div class="relative z-10 max-w-4xl text-center">
      <p class="mb-4 text-sm font-medium uppercase tracking-widest text-(--color-accent-cyan)">
        Welcome to my world
      </p>
      <h1 class="mb-6 font-(family-name:--font-display) text-(length:--text-hero) font-bold leading-[1.05] tracking-tight">
        Hi, I'm
        <span class="gradient-text"> {SITE.author}</span>
      </h1>
      <p class="mx-auto mb-8 max-w-2xl text-lg text-(--color-text-secondary) leading-relaxed">
        {SITE.description}
      </p>
      <div class="flex flex-wrap items-center justify-center gap-4">
        <a
          href="/projects"
          class="group relative inline-flex items-center gap-2 rounded-xl bg-gradient-to-r from-(--color-accent-violet) to-(--color-accent-pink) px-8 py-3 font-medium text-white transition-all duration-300 hover:shadow-[0_0_30px_rgba(124,58,237,0.4)]"
        >
          查看作品
          <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </a>
        <a
          href="/about"
          class="inline-flex items-center gap-2 rounded-xl border border-(--color-border-hover) px-8 py-3 font-medium text-(--color-text-secondary) transition-all duration-300 hover:border-(--color-accent-violet) hover:text-(--color-text-primary) hover:bg-(--color-bg-elevated)"
        >
          了解我
        </a>
      </div>
    </div>

    <!-- 滚动指示 -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <svg class="h-6 w-6 text-(--color-text-muted)" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </section>

  <!-- 简单占位区域 (Phase 2 会完善) -->
  <section class="mx-auto max-w-6xl px-6 py-24">
    <h2 class="mb-12 text-center font-(family-name:--font-display) text-(length:--text-title) font-bold">
      <span class="gradient-text">精选项目</span>
    </h2>
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {[1, 2, 3].map((i) => (
        <div class="group rounded-2xl border border-(--color-border-default) bg-(--color-bg-secondary) p-6 transition-all duration-300 hover:border-(--color-accent-violet) hover:shadow-[0_0_20px_rgba(124,58,237,0.15)]">
          <div class="mb-4 h-40 rounded-xl bg-(--color-bg-elevated)"></div>
          <h3 class="mb-2 font-(family-name:--font-display) text-lg font-semibold group-hover:text-(--color-accent-violet) transition-colors">
            项目 {i}
          </h3>
          <p class="text-sm text-(--color-text-secondary)">
            这是一个示例项目描述，Phase 2 会替换为真实内容。
          </p>
        </div>
      ))}
    </div>
  </section>
</PageLayout>
