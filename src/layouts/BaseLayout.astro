---
import '../styles/global.css';
import { SITE } from '../lib/constants';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

const {
  title = SITE.title,
  description = SITE.description,
  ogImage = '/og-image.png',
} = Astro.props;

const pageTitle = title === SITE.title ? title : `${title} | ${SITE.name}`;
const canonicalUrl = new URL(Astro.url.pathname, SITE.url);
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, SITE.url)} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content={SITE.name} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- View Transitions -->
    <ViewTransitions />
  </head>
  <body
    class="min-h-screen bg-(--color-bg-primary) text-(--color-text-primary) antialiased"
  >
    <slot />
  </body>
</html>
